<div id="assignment-modal<%=assignment.id%>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="assignmentModal" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="assignmentModal">Assignment</h3>
  </div>
  <div class="modal-body">
    <%= form_for(assignment) do |f| %>
    <%= f.label :active_at %>
    <%= f.datetime_field :active_at %>
    <i class="fa fa-calendar"></i>
    <%= f.label :due_at %>
    <%= f.datetime_field :due_at  %>
    <i class="fa fa-calendar"></i>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary"><%= f.submit %></button>
  </div>
  <% end %>
</div>
